<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingEnd="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <ImageView
            android:id="@+id/img"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/system_wu" />

        <ImageView
            android:id="@+id/tao_icon"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/img"
            android:scaleType="fitXY"
            android:src="@mipmap/baby_icon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@+id/tao_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_2"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/black_4f5564"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/coupon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/img"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/dp_5"
            android:text="领券立减50%"
            android:textColor="@color/red_f44336"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/coupon_num"
            android:layout_width="55dp"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/title"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/red_rectangle_bg"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:maxLines="2"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:text="￥20"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/coupon_after_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coupon_text"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/img"
            android:background="@drawable/red_rectangle_bg"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:maxLines="2"
            android:padding="@dimen/dp_2"
            android:text="券后价"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/coupon_now_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/coupon_after_tip"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/coupon_after_tip"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/dp_5"
            android:text="￥19.9"
            android:textColor="@color/red_f44336"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/coupon_original_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/coupon_after_tip"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/coupon_now_price_text"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/dp_2"
            android:text="￥39.9"
            android:textColor="@color/black_a8aaad"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/buy_now"
            android:layout_width="55dp"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/coupon_num"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/red_line_rectangle_radius_3_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_2"
            android:text="马上抢"
            android:textColor="@color/red_f44336"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/num_remains"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/img"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/dp_10"
            android:text="仅剩：9999/200000"
            android:textColor="@color/black_a8aaad"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <View
        style="@style/horizontal_line"
        android:layout_height="@dimen/dp_8" />
</LinearLayout>