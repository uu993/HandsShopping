<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/color_red">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/white_rectangle_radius_3_bg"
            android:drawableLeft="@mipmap/home_search_red_icon"
            android:drawablePadding="@dimen/dp_10"
            android:hint="手机"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/red_f44336"
            android:textColorHighlight="@color/title_hint_color"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/TabBarBackgroundColor"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:text="热门搜索"
        android:textColor="@color/black_a8aaad"
        android:textSize="@dimen/sp_12" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/hot_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/TabBarBackgroundColor"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:text="历史搜索"
        android:textColor="@color/black_a8aaad"
        android:textSize="@dimen/sp_12" />

    <ListView
        android:id="@+id/history_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null" />

    <Button
        android:id="@+id/clear_history"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/red_line_rectangle_radius_3_bg"
        android:text="清除历史搜索"
        android:textColor="@color/title_hint_color"
        android:textSize="@dimen/sp_13" />
</LinearLayout>